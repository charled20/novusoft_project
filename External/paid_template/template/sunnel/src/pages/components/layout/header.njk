{% from "components/variables.njk" import defaults %}

<!-- BEGIN Header -->
<div class="header">

  <!-- BEGIN Header Holder -->
  <div class="header-holder header-holder-desktop">
    <div class="header-container {{ container_class }}">
      <div class="header-wrap header-wrap-block justify-content-start">
        {% include "./header-nav.njk" %}
      </div>
      <div class="header-wrap hstack gap-2">
        
        <!-- BEGIN Dropdown -->
        <div class="dropdown">
          <button class="btn btn-flat-primary btn-icon" data-bs-toggle="dropdown">
            <i class="far fa-bell"></i>
            <div class="btn-marker">
              <i class="marker marker-dot text-primary"></i>
            </div>
          </button>
          <div class="dropdown-menu dropdown-menu-end dropdown-menu-wide dropdown-menu-animated overflow-hidden py-0">
            {% include "./header-notification.njk" %}
          </div>
        </div>
        <!-- END Dropdown -->

        <!-- BEGIN Dropdown -->
        <div class="dropdown">
          <button class="btn btn-flat-primary btn-icon" data-bs-toggle="dropdown">
            <i class="far fa-comments"></i>
            <div class="btn-marker">
              <i class="marker marker-dot text-primary"></i>
            </div>
          </button>
          <div class="dropdown-menu dropdown-menu-end dropdown-menu-wide dropdown-menu-animated overflow-hidden py-0">
            {% include "./header-chat.njk" %}
          </div>
        </div>
        <!-- END Dropdown -->

        {% include "./header-action.njk" %}
      </div>
    </div>
  </div>
  <!-- END Header Holder -->

  <!-- BEGIN Header Holder -->
  <div class="header-holder header-holder-mobile">
    <div class="header-container {{ container_class }}">
      <div class="header-wrap me-3">
        <button class="btn btn-flat-primary btn-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-navigation">
          <i class="fa fa-bars"></i>
        </button>
      </div>
      <div class="header-wrap header-wrap-block justify-content-start">
        <h4 class="header-brand">{{ defaults.brand_name }}</h4>
      </div>
      <div class="header-wrap hstack gap-2">
        <!-- BEGIN Dropdown -->
        <div class="dropdown">
          <button class="btn btn-flat-primary btn-icon" data-bs-toggle="dropdown">
            <i class="far fa-bell"></i>
            <div class="btn-marker">
              <i class="marker marker-dot text-primary"></i>
            </div>
          </button>
          <div class="dropdown-menu dropdown-menu-end dropdown-menu-wide dropdown-menu-animated overflow-hidden py-0">
            {% include "./header-notification.njk" %}
          </div>
        </div>
        <!-- END Dropdown -->

        <!-- BEGIN Dropdown -->
        <div class="dropdown">
          <button class="btn btn-flat-primary btn-icon" data-bs-toggle="dropdown">
            <i class="far fa-comments"></i>
            <div class="btn-marker">
              <i class="marker marker-dot text-primary"></i>
            </div>
          </button>
          <div class="dropdown-menu dropdown-menu-end dropdown-menu-wide dropdown-menu-animated overflow-hidden py-0">
            {% include "./header-chat.njk" %}
          </div>
        </div>
        <!-- END Dropdown -->

        <button class="btn btn-flat-primary btn-icon" data-toggle="aside" data-target="content">
          <i class="far fa-list-alt"></i>
        </button>
        <button class="btn btn-flat-primary btn-icon" data-toggle="aside" data-target="menu">
          <i class="far fa-paper-plane"></i>
        </button>
      </div>
    </div>
  </div>
  <!-- END Header Holder -->

</div>
<!-- END Header -->
