{% from "components/variables.njk" import defaults %}

<!-- BEGIN Header -->
<div class="header">

  <!-- BEGIN Header Holder -->
  <div class="header-holder header-holder-desktop">
    <div class="header-container {{ container_class }}">
      <div class="header-wrap">
        <h4 class="header-brand">{{ defaults.brand_name }}</h4>
      </div>
      <i class="header-divider"></i>
      <div class="header-wrap header-wrap-block justify-content-start">
        {% include "./header-nav.njk" %}
      </div>
      <div class="header-wrap">
        <button class="btn btn-label-primary btn-icon me-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-todo">
          <i class="far fa-calendar-alt"></i>
        </button>
        <button class="btn btn-label-primary btn-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-settings">
          <i class="far fa-list-alt"></i>
        </button>
      </div>
    </div>
  </div>
  <!-- END Header Holder -->

  <!-- BEGIN Header Holder -->
  <div class="header-holder header-holder-mobile">
    <div class="header-container {{ container_class }}">
      <div class="header-wrap header-wrap-block justify-content-start">
        <h4 class="header-brand">{{ defaults.brand_name }}</h4>
      </div>
      <div class="header-wrap">
        <button class="btn btn-label-primary btn-icon me-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-settings">
          <i class="far fa-list-alt"></i>
        </button>
        <button class="btn btn-label-primary btn-icon me-2" data-toggle="aside">
          <i class="far fa-paper-plane"></i>
        </button>
        <button class="btn btn-label-primary btn-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvas-navigation">
          <i class="fa fa-bars"></i>
        </button>
      </div>
    </div>
  </div>
  <!-- END Header Holder -->

</div>
<!-- END Header -->
